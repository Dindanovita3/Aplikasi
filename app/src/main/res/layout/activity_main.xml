<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niat Puasa"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btnNiatPuasaRamadhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Niat Puasa Ramadhan" />

    <Button
        android:id="@+id/btnNiatPuasaSunnah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Niat Puasa Sunnah"/>

    <Button
        android:id="@+id/btnNiatPuasaSenin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Niat Puasa Senin"/>

    <Button
        android:id="@+id/btnNiatPuasaKamis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Niat Puasa Kamis"/>

    <Button
        android:id="@+id/btnNiatPuasaSyawal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Niat Puasa Syawal"/>

    <Button
        android:id="@+id/btnNiatPuasaQadha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Niat Puasa Qadha"/>

    <Button
        android:id="@+id/btnNiatPuasaAsyura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Niat Puasa Asyura"/>

    <Button
        android:id="@+id/btnNiatPuasaNazar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Niat Puasa Nazar"/>







    <TextView
        android:id="@+id/tvNiat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/Latin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/Arti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:paddingTop="16dp"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>